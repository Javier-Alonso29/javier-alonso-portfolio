---
interface Props {
  projectRepository?: string;
  frontendRepository?: string;
  backendRepository?: string;
  deploymentUrl?: string;
}

const {
  projectRepository,
  frontendRepository,
  backendRepository,
  deploymentUrl,
} = Astro.props;
const totalLinks = [
  projectRepository,
  frontendRepository,
  backendRepository,
  deploymentUrl,
].filter(Boolean).length;
---

