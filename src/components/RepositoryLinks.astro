    frontendRepository ||
    backendRepository ||
    deploymentUrl) && (
    <div
      class={`grid grid-cols-1 ${
        totalLinks === 1
          ? "md:grid-cols-1 max-w-md mx-auto"
          : totalLinks === 2
            ? "md:grid-cols-2"
            : "md:grid-cols-3"
      } gap-4 mb-6`}
    >
      {projectRepository && (
        <a
          href={projectRepository}
          class="flex items-center justify-center gap-3 px-4 py-3 rounded-lg bg-muted/40 hover:bg-primary/10 border border-muted-foreground/10 shadow-sm transition-all duration-200 group no-underline"
