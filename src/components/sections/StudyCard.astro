---
import Card from '../Card.astro'
import { Badge } from '../ui/badge'
import { shuffleArray } from "../../lib/utils";
import { PROFILE } from "../../content/profileData";


shuffleArray(PROFILE.studies)
---


<div class="mt-2 flex w-full flex-wrap items-center justify-center gap-2">
  {
    PROFILE.studies.map((study) => (
      <Badge variant="outline">
        <div class="flex flex-col items-center">
          <span>{study.title}</span>
          <div class="w-full border-t border-muted my-1"></div>
          <span class="text-xs text-muted-foreground">{study.institution}</span>
        </div>
      </Badge>
    ))
  }
</div>
