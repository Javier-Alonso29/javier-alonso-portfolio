---
import { PROFILE } from "../content/profileData";
import { getGitVersion } from "../lib/getVersion";

const version = getGitVersion();
---
<footer class="border-t py-6 md:px-8 md:py-0 w-full max-w-screen-lg">
  <div
    class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row"
  >
    <div class="flex flex-col items-center md:items-start gap-2">
      <p class="text-center text-xs leading-loose text-muted-foreground md:text-left">
        Designed & Built with <span class="text-red-500">❤️</span> by{' '}
        <a
          href={PROFILE.links.github}
          target="_blank"
          class="font-medium underline underline-offset-4"
        >
          Javier Alonso
        </a>
        {' '} · Launching products from Mexico 🇲🇽
      </p>
      <div class="flex flex-col md:flex-row items-center gap-2 text-[10px] text-muted-foreground/50">
        <span>{version}</span>
        <span class="hidden md:inline">·</span>
        <a 
          href="https://creativecommons.org/licenses/by/4.0/"
          target="_blank"
          class="hover:text-muted-foreground transition-colors"
        >
          CC BY 4.0 License
        </a>
      </div>
    </div>
  </div>
</footer>
